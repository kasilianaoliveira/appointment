## Infrastructure (docker-compose)
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=appointment_db
POSTGRES_PORT=5470

PGADMIN_DEFAULT_EMAIL=admin@appointment.local
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=8080

## App (src/core/settings.py)
# If your API runs on the host (recommended while learning):
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
ENV=local

# Database connection used by the API:
# - when Postgres runs via docker-compose and the API runs on the host:
POSTGRES_HOST=localhost
POSTGRES_PORT=5470

# - when both run in docker and share the compose network:
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432

# Optional: override the computed URL (takes precedence if set)
# DATABASE_URL=postgresql+asyncpg://admin:admin@localhost:5470/appointment_db

## Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# Optional: Redis password (leave empty if no password)
# REDIS_PASSWORD=

## MinIO Storage
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# MinIO connection (when API runs on host)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=appointment
MINIO_USE_SSL=false

# MINIO_PUBLIC_URL=http://localhost:9000/appointment-assets

## Resend Email
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
# Nota: O Resend não permite enviar de domínios não verificados (gmail.com, yahoo.com, etc.)
# Use um domínio verificado no Resend ou o email de teste: onboarding@resend.dev
RESEND_FROM_EMAIL=Agendamentos KL FixByte <onboarding@resend.dev>

